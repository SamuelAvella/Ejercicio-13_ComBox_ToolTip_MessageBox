<Window x:Class="FormularioInteractivo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario Interactivo" Height="200" Width="400">
    <Grid>
        <!-- ComboBox para seleccionar la categoría -->
        <ComboBox Name="cbCategoria" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" Width="200">
            <ComboBoxItem Content="Categoría A"/>
            <ComboBoxItem Content="Categoría B"/>
        </ComboBox>

        <!-- Contenedor para los botones en horizontal -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10, 50, 10, 10">
            <Button Name="btnAccion1" Content="Acción 1" Width="100" Height="30" Margin="10" ToolTip="Haz clic para realizar la Acción 1" Click="btnAccion_Click"/>
            <Button Name="btnAccion2" Content="Acción 2" Width="100" Height="30" Margin="10" ToolTip="Haz clic para realizar la Acción 2" Click="btnAccion_Click"/>
            <Button Name="btnAccion3" Content="Acción 3" Width="100" Height="30" Margin="10" ToolTip="Haz clic para realizar la Acción 3" Click="btnAccion_Click"/>
        </StackPanel>
    </Grid>
</Window>
