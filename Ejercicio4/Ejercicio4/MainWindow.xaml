<Window x:Class="ConfirmacionAvanzada.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmación Avanzada" Height="200" Width="400">
    <Grid>
        <ComboBox Name="cbFrutas" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" Width="200">
            <ComboBoxItem Content="Manzana"/>
            <ComboBoxItem Content="Naranja"/>
            <ComboBoxItem Content="Plátano"/>
        </ComboBox>

        <Button Content="Confirmar selección" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Click="btnConfirmar_Click"/>
    </Grid>
</Window>
